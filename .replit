run = "npm run dev"
modules = ["nodejs-20"]
hidden = [".config", "tsconfig.json", "tsconfig.node.json", "vite.config.js", ".gitignore"]
entrypoint = "src/App.tsx"

[nix]
channel = "stable-24_05"

[unitTest]
language = "nodejs"

[deployment]
deploymentTarget = "static"
build = ["sh", "-c", "npm run build"]
publicDir = "dist"
run = ["sh", "-c", "npx vite preview --host 0.0.0.0 --port 3000"]

[[ports]]
localPort = 5173
externalPort = 80

[[ports]]
localPort = 5174
externalPort = 3000

[[ports]]
localPort = 5175
externalPort = 3001

[[ports]]
localPort = 5176
externalPort = 3002

[workflows]
runButton = "Start API und Frontend"

[[workflows.workflow]]
name = "API Server"
author = 40103754

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ts-node src/api/startServer.ts"

[[workflows.workflow]]
name = "Start Admin"
author = 40103754

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Start API and Frontend"
author = 40103754

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx ts-node src/api/startServer.ts & npm run dev"

[[workflows.workflow]]
name = "Start API und Frontend"
